<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src="/assets/logo.png" alt="FinEdge Logo" />
      </a>
    </div>
    <div class="headline">
      <h1><span class="highlight">Welcome to</span> FinEdge</h1>
    </div>
    <nav>
      <input type="checkbox" id="toggle-nav">
      <label for="toggle-nav" class="menu-btn">
        <i class="fas fa-bars"></i>
      </label>
      <ul class="navigation">
        <li><a href="/">Home</a></li>
        <li><a href="/aboutUs">About Us</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/contactUs">Contact Us</a></li>
      </ul>
    </nav>
  </div>
</header>
<style>
  .header {
    height: 80px;
    width: 100%;
    background: var(--color-primary);
  }

  .header .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  .header img {
    height: 45px;
    vertical-align: middle;
    margin-top: 15px;
  }

  .header .headline {
    animation: neon 1s ease-in-out infinite alternate;
    font-size: 16px;
    text-align: center;
    margin-top: 15px;
  }

  @keyframes neon {
    0% { color: #6b21a8; }
    50% { color: #dc143c; }
    100% { color: #6b21a8; }
  }

  .header nav ul {
    display: flex;
    justify-content: flex-end;
    margin-right: 20px;
  }

  .header nav ul li {
    display: inline-block;
    line-height: 80px;
    margin: 0 5px;
  }

  .header nav ul li a {
    color: #fff;
    font-size: 17px;
    padding: 7px 13px;
    border-radius: 3px;
  }

  a:hover {
    background: #1b9bff;
    transition: 0.5s;
  }

  .menu-btn {
    font-size: 30px;
    color: #6b21a8;
    float: right;
    line-height: 80px;
    margin-right: 10px;
    cursor: pointer;
    display: none;
  }

  #toggle-nav {
    display: none;
  }

  @media (max-width: 858px) {
    .menu-btn {
      display: block;
    }

    .navigation {
      position: fixed;
      width: 80%;
      height: 100vh;
      background: #2c3e50;
      top: 80px;
      left: -100%;
      text-align: center;
      transition: all 0.5s;
    }

    .navigation li {
      display: block;
      margin: 50px 0;
      line-height: 30px;
    }

    .navigation li a {
      font-size: 20px;
    }

    #toggle-nav:checked ~ .navigation {
      left: 0;
    }
    
    .header.nav-open .menu-btn i {
      transform: rotate(90deg);
    }

    .header.nav-open .navigation {
      left: 0;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleNav = document.getElementById('toggle-nav') as HTMLInputElement | null;
    const header = document.querySelector('.header') as HTMLElement | null;

    if (toggleNav && header) {
      toggleNav.addEventListener('change', function() {
        header.classList.toggle('nav-open');
      });

      const navigationLinks = document.querySelectorAll('.navigation li a');
      navigationLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          if (toggleNav.checked) {
            toggleNav.checked = false;
            header.classList.remove('nav-open');
          }
        });
      });
    }
  });
</script>
